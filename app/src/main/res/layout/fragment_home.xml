<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Searching"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colornew"
                android:gravity="start"
                android:text="Most Viewed Product"
                android:textAlignment="center"
                android:textColor="@color/colornew1"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/searchResultView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/searchResultViewTrending"
                    android:layout_marginTop="29dp"
                    android:background="@color/colornew"
                    android:gravity="start"
                    android:text="Trending Products"
                    android:textAlignment="center"
                    android:textColor="@color/colornew1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/searchResultViewTrending"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/bestseller"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="44dp"

                    android:background="@color/colornew"
                    android:gravity="start"
                    android:text="Best Seller"
                    android:textAlignment="center"
                    android:textColor="@color/colornew1"
                    android:textSize="20sp"
                    android:textStyle="bold" />




            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>