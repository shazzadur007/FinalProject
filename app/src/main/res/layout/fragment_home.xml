<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Searching"
                android:textSize="30sp" />


            <LinearLayout
                android:id="@+id/searchResultView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"

                android:layout_height="30dp"
                android:background="@color/colornew"
                android:gravity="start"
                android:text="Trending Products"
                android:textAlignment="center"
                android:textColor="@color/colornew1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gift"

                    />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignLeft="@+id/img1"
                    android:layout_marginLeft="137dp"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignLeft="@+id/img2"
                    android:layout_marginLeft="155dp"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/img1"
                    android:src="@drawable/gift"

                    />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/img2"
                    android:layout_alignLeft="@+id/img4"
                    android:layout_marginLeft="137dp"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/img3"
                    android:layout_alignLeft="@+id/img4"
                    android:layout_marginLeft="292dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/bestseller"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:layout_below="@+id/img4"
                    android:background="@color/colornew"
                    android:gravity="start"
                    android:text="Best Seller"
                    android:textAlignment="center"
                    android:textColor="@color/colornew1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/bestseller"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/bestseller"
                    android:layout_alignLeft="@+id/img7"
                    android:layout_marginLeft="118dp"
                    android:layout_marginTop="-1dp"
                    android:src="@drawable/home" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>